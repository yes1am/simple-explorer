{
	"name": "simple-explorer",
	"displayName": "Simple Explorer",
	"description": "Only view the directories or files you care about",
	"version": "0.0.6",
	"publisher": "songjp",
	"engines": {
		"vscode": "^1.49.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yes1am/simple-explorer"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"icon": "images/icon.png",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "simpleExplorer",
					"name": "Simple Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "simpleExplorer.openFile",
				"title": "Open File"
			},
			{
				"command": "simpleExplorer.addToSimpleExplorer",
				"title": "添加到 Simple Explorer"
			},
			{
				"command": "simpleExplorer.removeFromSimpleExplorer",
				"title": "从 Simple Explorer 移除"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "simpleExplorer.addToSimpleExplorer",
					"group": "9_cutcopypaste@1"
				},
				{
					"command": "simpleExplorer.removeFromSimpleExplorer",
					"group": "9_cutcopypaste@2"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.49.0",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
